<Window x:Class="Team7GUI.Reviews"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team7GUI"
        mc:Ignorable="d"
        Title="Reviews" Height="482" Width="869">
    <Grid>
        <DataGrid x:Name="reviewGrid" Margin="0" ColumnWidth="*" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Reviewdate}" Header="Date" IsReadOnly="True" Width="9*" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" IsReadOnly="True" Width="10*"/>
                <DataGridTextColumn Binding="{Binding Stars}" Header="Stars" IsReadOnly="True" Width="5*"/>
                <DataGridTextColumn Binding="{Binding Reviewtext}" Header="Text" IsReadOnly="True" Width="60*"/>
                <DataGridTextColumn Binding="{Binding Funny}" Header="Funny" IsReadOnly="True" Width="5*"/>
                <DataGridTextColumn Binding="{Binding Useful}" Header="Useful" IsReadOnly="True" Width="6*"/>
                <DataGridTextColumn Binding="{Binding Cool}" Header="Cool" IsReadOnly="True" Width="5*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
